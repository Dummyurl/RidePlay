<?xml version="1.0" encoding="utf-8"?>
<rnf.taxiad.views.SwipeIndicator xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeIndicator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/indicatorRight"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_right"
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/indicatorLeft"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_arrow_left"
        android:adjustViewBounds="true" />

</rnf.taxiad.views.SwipeIndicator>